{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "",
  
    "title": {
        "text": "Share of energy from animal proteins vs. GDP per capita",
        "subtitle":"Source: Food and Agricultural Organisation, United Nations",
        "subtitleFontStyle":"italic",
        "subtitleFontSize":10,
        "anchor": "start",
        "color": "black",
        "subtitleColor": "black"
       },
  
    "width": 500,"height": 300,
    "data": {
      "url": "https://raw.githubusercontent.com/nutharabandara/nutharabandara.github.io/main/data/share_animal_GDP.csv"
    },
    
  "layer": [
    {
    "mark": "circle",
    "config":{"point": {"size": 30} },
    
    "encoding": {
      "y": {
        "field": "Share",
        "type": "quantitative",
        "title": "% of Energy",
        "scale": {"domain": [0,15]},
        "axis": {"minExtent": 30}
      },
      "x": {
        "field": "GDP per capita",
        "type": "quantitative"
        
      },
      "size": {
        "field": "Population", 
        "type": "quantitative", 
        "legend":null,
         "scale": {"rangeMax":2000, "rangeMin": 100}
         },
      "color": {
            "field": "Share",
            "type": "quantitative",
            "legend": null,
            "scale": {"scheme": "category10", "reverse": true}
          },
          "tooltip": [{"field": "Entity", "title": "Country"},{"field": "GDP per capita", "title": "GDP per capita ($)" }, {"field": "Share", "title": "%energy from animal proteins"}]
        }
    },
    {
      "mark":{
      "type": "line","strokeWidth":4,"color":"#3a3d3d","interpolate":"cardinal","opacity":1
    },
      "transform": [{"regression": "GDP per capita", "on": "Share"}],
      "encoding": {
        "x": {"field": "GDP per capita",
        "type": "quantitative"
        },
        "y": {"field": "Share",
        "type": "quantitative"
        },
        "color": {
          "field": "Country",
          "type": "nominal",
          "legend": null,
          "scale": {"scheme": "blues", "reverse": true}
        },
        "tooltip": {"field": "State", "type": "ordinal"}
      }
    },
    {
      "transform": [
        {"regression": "Share", "on": "GDP per capita", "params": true},
        {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
      ],
      "mark": {
        "type": "text",
        "color": "plum",
        "x": "width",
        "align": "right",
        "y": -10
      },
      "encoding": {"text": {"type": "nominal", "field": "R2"}}
    }
  ]
}
